{
  "name": "aereal.github.com",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "deploy": "firebase deploy --only hosting",
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "export": "next export -o dist",
    "predeploy": "run-s -l -s build export",
    "generate-content-model-defs": "contentful-typescript-codegen --output src/@types/@aereal/portfolio.d.ts",
    "type-check": "tsc -p . --noEmit",
    "type-check:watch": "tsc -p . --noEmit -w",
    "test": "run-p -l -s build jest",
    "jest": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aereal/aereal.github.com.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aereal/aereal.github.com/issues"
  },
  "homepage": "https://github.com/aereal/aereal.github.com#readme",
  "devDependencies": {
    "@contentful/rich-text-html-renderer": "15.12.0",
    "@contentful/rich-text-types": "15.12.0",
    "@types/jest": "27.4.1",
    "@types/react": "17.0.43",
    "@types/react-dom": "17.0.14",
    "@types/styled-components": "5.1.24",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "babel-plugin-styled-components": "2.0.6",
    "contentful": "8.4.0",
    "contentful-management": "8.2.2",
    "contentful-typescript-codegen": "3.2.3",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.3.0",
    "firebase-tools": "10.4.2",
    "jest": "27.5.1",
    "next": "12.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-is": "17.0.2",
    "styled-components": "5.3.5",
    "ts-jest": "27.1.4",
    "typescript": "4.6.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:react/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "createDefaultProgram": true,
      "project": "./tsconfig.json",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
        "warn",
        {
          "functions": false,
          "classes": false,
          "variables": false,
          "typedefs": false
        }
      ],
      "@typescript-eslint/array-type": [
        "warn",
        {
          "default": "array-simple",
          "readonly": "array-simple"
        }
      ],
      "@typescript-eslint/interface-name-prefix": [
        "error",
        {
          "prefixWithI": "never"
        }
      ],
      "@typescript-eslint/no-unused-vars": 0,
      "react/prop-types": 0
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "jsxBracketSameLine": true
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true
        }
      ]
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test|spec)\\.tsx?$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx"]
  }
}
